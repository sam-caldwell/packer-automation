{
  "builders": [
    {
      "name": "vmware",
      "type": "vmware-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": 61440,
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/microsoft-updates.bat",
        "./scripts/windows/win-updates.ps1",
        "./scripts/windows/openssh.ps1"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "2048",
        "numvcpus": "2",
        "scsi0.virtualDev": "lsisas1068"
      }
    },
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows2016_64",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/microsoft-updates.bat",
        "./scripts/windows/win-updates.ps1",
        "./scripts/windows/openssh.ps1"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ]
    },
    {
      "name": "parallels",
      "type": "parallels-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "win-2016",
      "parallels_tools_flavor": "win",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/microsoft-updates.bat",
        "./scripts/windows/win-updates.ps1",
        "./scripts/windows/openssh.ps1"
      ],
      "prlctl": [
        ["set", "{{.Name}}", "--memsize", "{{user `memory_size`}}"],
        ["set", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["set", "{{.Name}}", "--winsystray-in-macmenu", "off"],
        ["set", "{{.Name}}", "--startup-view", "window"],
        ["set", "{{.Name}}", "--efi-boot", "off"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/windows/vm-guest-tools.bat",
        "./scripts/windows/vagrant-ssh.bat",
        "./scripts/windows/enable-rdp.bat",
        "./scripts/windows/compile-dotnet-assemblies.bat",
        "./scripts/windows/disable-auto-logon.bat",
        "./scripts/windows/install7z.bat",
        "./scripts/windows/installSdelete.bat",
        "./scripts/windows/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2016_{{.Provider}}.box",
      "vagrantfile_template": "./vagrant/windows/2016.template"
    }
  ],
  "variables": {
    "iso_url": "./assets/iso/windows/2016.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "70721288bbcdfe3239d8f8c0fae55f1f",
    "autounattend": "./answer_files/windows/2016/Autounattend.xml"
  }
}
